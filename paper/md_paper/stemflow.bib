@article{campbell_consequences_2021,
	title = {The consequences of checking for zero‐inflation and overdispersion in the analysis of count data},
	volume = {12},
	issn = {2041-210X, 2041-210X},
	url = {https://besjournals.onlinelibrary.wiley.com/doi/10.1111/2041-210X.13559},
